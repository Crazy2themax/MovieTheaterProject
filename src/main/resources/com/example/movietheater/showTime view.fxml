<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<!--
    FXML Layout: ShowTimeView.fxml
    Description:
        This layout defines the "ShowTimes (Manager View)" in the JavaFX application.
        It displays showtime cards for movies with associated images, durations, and times.
        Provides buttons to log out, edit showtimes, add showtimes, delete showtimes, and
        open the movie list.

    Controller:
        fx:controller="ShowTimeView"

    Elements:
        - AnchorPane: Root layout container with prefHeight=378.0 and prefWidth=446.0
        - Label "ShowTimes (Manager View)": Title label
        - Button LogOutShowTimeMangerViewButton: Logs out the com.example.movietheater.Models.manager
        - AnchorPane (com.example.movietheater.Models.Movie Card): Displays movie information
            - Label: com.example.movietheater.Models.Movie title (e.g., "Moana")
            - ImageView: com.example.movietheater.Models.Movie poster
            - Label: com.example.movietheater.Models.Movie duration
            - Labels: Available showtimes
        - AnchorPane (com.example.movietheater.Models.Movie Card): Another movie information card (e.g., "Avengers Endgame")
            - Label: com.example.movietheater.Models.Movie title
            - ImageView: com.example.movietheater.Models.Movie poster
            - Label: com.example.movietheater.Models.Movie duration
            - Labels: Available showtimes
        - Button editShowTimeMangerViewButton: Opens edit showtime form
        - Button AddShowTimeMangerViewButton: Opens add showtime form
        - Button movieListShowTimeMangerViewButton: Opens movie list view
        - Button DeleteShowTimeMangerViewButton: Deletes selected showtime
-->

<AnchorPane prefHeight="415.0" prefWidth="521.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ShowTimeView">
   <children>
      <Label layoutX="14.0" layoutY="11.0" prefHeight="30.0" prefWidth="257.0" text="ShowTimes (Manager View) ">
         <font>
            <Font size="20.0" />
         </font></Label>
      <Button fx:id="LogOutShowTimeMangerViewButton" layoutX="440.0" layoutY="14.0" mnemonicParsing="false" text="Log Out" />

      <Button fx:id="editShowTimeMangerViewButton" layoutX="415.0" layoutY="100.0" mnemonicParsing="false" text="Edit Showtime" />
      <Button fx:id="AddShowTimeMangerViewButton" layoutX="413.0" layoutY="155.0" mnemonicParsing="false" text="Add Showtime" />
      <Button fx:id="movieListShowTimeMangerViewButton" layoutX="426.0" layoutY="331.0" mnemonicParsing="false" text="Movie List" />
      <Button fx:id="DeleteShowTimeMangerViewButton" layoutX="407.0" layoutY="218.0" mnemonicParsing="false" text="Delete Showtime" />
      <TableView editable="true" layoutY="40.0" prefHeight="370.0" prefWidth="374.0">
        <columns>
          <TableColumn id="movieTitleColumn" prefWidth="128.7999849319458" text="Movie Title" />
          <TableColumn id="timeColumn" prefWidth="75.20001220703125" text="Time" />
            <TableColumn id="dateColumn" prefWidth="78.40000915527344" text="date" />
            <TableColumn id="DurationColumn" prefWidth="90.39998779296877" text="Duration" />
        </columns>
      </TableView>
   </children>
</AnchorPane>
