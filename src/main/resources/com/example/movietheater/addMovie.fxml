<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<!--
    FXML Layout: AddMovie.fxml
    Description:
        This layout defines the "Add com.example.movietheater.Models.Movie" form in the JavaFX application.
        It allows the user to enter a movie ID, title, and duration, and provides
        buttons to save the movie or cancel the operation.

    Controller:
        fx:controller="AddMovie"

    Elements:
        - AnchorPane: Root layout container with prefHeight=245.0 and prefWidth=422.0
        - Label "Add com.example.movietheater.Models.Movie": Title label with font size 20
        - Label "movie ID": Label for movie ID input
        - TextField addMovieIDTextField: Input field for movie ID
        - Label "com.example.movietheater.Models.Movie Title": Label for movie title input
        - TextField addMovieTitleTextField: Input field for movie title
        - Label "Duration": Label for movie duration input
        - TextField addMovieDurationTextField: Input field for movie duration
        - Button addMovieSaveButton: Button to save the movie
        - Button addMoveiCancelButton: Button to cancel the operation (note typo: Movei)
-->

<AnchorPane prefHeight="245.0" prefWidth="422.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="AddMovie">
   <children>
      <Button fx:id="addMovieSaveButton" layoutX="165.0" layoutY="189.0" mnemonicParsing="false" text="Save" />
      <Label layoutX="14.0" layoutY="14.0" text="Add Movie">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <Label layoutX="99.0" layoutY="101.0" text="Title" />
      <Label layoutX="87.0" layoutY="149.0" text="Duration" />
      <Label layoutX="87.0" layoutY="59.0" text="movie ID" />
      <TextField fx:id="addMovieIDTextField" layoutX="187.0" layoutY="55.0" />
      <TextField fx:id="addMovieTitleTextField" layoutX="187.0" layoutY="97.0" />
      <TextField fx:id="addMovieDurationTextField" layoutX="187.0" layoutY="145.0" />
      <Button fx:id="addMoveiCancelButton" layoutX="311.0" layoutY="189.0" mnemonicParsing="false" text="Cancel" />
   </children>
</AnchorPane>
