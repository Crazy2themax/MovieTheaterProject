<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<!--
    FXML Layout: EditShowTime.fxml
    Description:
        This layout defines the "Edit Showtime" form in the JavaFX application.
        It allows the user to edit an existing showtime's movie ID, room number, time, date,
        and optionally update the associated image. Provides buttons to save changes, cancel
        editing, or browse for an image file.

    Controller:
        fx:controller="EditShowTime"

    Elements:
        - AnchorPane: Root layout container with prefHeight=319.0 and prefWidth=422.0
        - Label "Edit Showtime": Title label with font size 20
        - Label "com.example.movietheater.Models.Movie ID": Label for movie ID input
        - TextField editShowTimeMovieIDTextField: Input field for movie ID
        - Label "roomNumber": Label for room number input
        - TextField editShowTimeRoonNumberTextField: Input field for room number (note typo: Roon)
        - Label "Time": Label for showtime time input
        - TextField editShowTimeTimeTextField: Input field for showtime time
        - Label "Date": Label for showtime date input
        - TextField editShowTimeDateTextField: Input field for showtime date
        - Label "MovieI Image": Label for movie image selection (note typo: MovieI)
        - TextField editShowTimeImageLocationTextField: Input field for image path
        - Button editShowtimeSaveButton: Button to save the edited showtime
        - Button editShowTimeCancelButton: Button to cancel editing
        - Button editShowTimeBrowserButton: Button to browse for an image file
-->
<AnchorPane prefHeight="319.0" prefWidth="422.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="EditShowTime">
   <children>
      <Label layoutX="24.0" layoutY="24.0" text="Edit Showtime">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <Label layoutX="96.0" layoutY="71.0" text="com.example.movietheater.Models.Movie ID" />
      <Label layoutX="84.0" layoutY="150.0" text="roomNumber" />
      <Label layoutX="105.0" layoutY="196.0" text="Time" />
      <Label layoutX="107.0" layoutY="234.0" text="Date" />
      <TextField fx:id="editShowTimeMovieIDTextField" layoutX="194.0" layoutY="67.0" />
      <TextField fx:id="editShowTimeRoonNumberTextField" layoutX="194.0" layoutY="146.0" />
      <TextField fx:id="editShowTimeTimeTextField" layoutX="194.0" layoutY="192.0" />
      <TextField fx:id="editShowTimeDateTextField" layoutX="194.0" layoutY="230.0" />
      <Button fx:id="editShowtimeSaveButton" layoutX="174.0" layoutY="268.0" mnemonicParsing="false" text="Save" />
      <Button fx:id="editShowTimeCancelButton" layoutX="318.0" layoutY="268.0" mnemonicParsing="false" text="Cancel" />
      <Label layoutX="85.0" layoutY="109.0" text="MovieI Image" />
      <TextField id="editShowTimeImageLocationTextField" layoutX="194.0" layoutY="105.0" />
      <Button fx:id="editShowTimeBrowserButton" layoutX="349.0" layoutY="105.0" mnemonicParsing="false" text="Browser" />
   </children>
</AnchorPane>
